<h2>Resend unlock instructions</h2>

<%= form_for(admin, as: admin_name, url: unlock_path(admin_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", admin: admin %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
