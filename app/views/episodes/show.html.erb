<p id="notice"><%= notice %></p>

<% logger.debug ">>>>>>> view. @episode is #{@episode}" %>

<% if @episode.draft? %> <p><H1>DRAFT DRAFT DRAFT</H1></p> <% end %>
<p>
  <strong>Number:</strong>
  <%= @episode.number %>
</p>

<p>
  <strong>Title:</strong>
  <%= @episode.title %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @episode.slug %>
</p>

<p>
  <strong>Publish date:</strong>
  <%= @episode.publish_date %>
</p>

<p>
  <strong>Description:</strong>
  <%= @episode.description %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @episode.notes %>
</p>

<% if @episode.images.attached? %>
<p>
  <strong>Images:</strong>
  <br>
  <% @episode.images.each do |image| %>
    <%= image_tag(image) %>
  <% end %>
</p>
<% end %>

<%= link_to 'Edit', edit_episode_path(@episode) %> |
<%= link_to 'Back', episodes_path %>